{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["esnext"],
    "sourceMap": true,
    "isolatedModules": true,
    "strict": true,
    "declaration": true,

    "rootDir": "./src",
    "outDir": "./build",

    "moduleResolution": "node",
    "baseUrl": "./",
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "**/*.spec.ts", "build/**/*.*"]
}
